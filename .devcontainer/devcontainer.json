{
  "name": "Claude Code Sandbox",
  "build": {
    "dockerfile": "Dockerfile",    
    "args": { // passes ENV variables to the Docker file
      "TZ": "${localEnv:TZ:Australia/Sydney}",
      "CLAUDE_CODE_VERSION": "latest",
      "GIT_DELTA_VERSION": "0.18.2",
      "ZSH_IN_DOCKER_VERSION": "1.2.0"
    }
  },
  "features":{
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {}
  },
  "runArgs": [
    // "--gpus=all", // This enable gpu usage
    // These enable firewall settings    
  ], 
  "customizations": {
    "vscode": {
      "extensions": [ // extensions from VSCode
        // "dbaeumer.vscode-eslint", // Uncomment this for JS/TS linters and formatters
        // "esbenp.prettier-vscode",
        "ms-python.black-formatter",
        "eamodio.gitlens",
        "ms-python.python",        
        "github.github-vscode-theme"
      ],
      "settings": {
        "workbench.colorTheme": "GitHub Dark Default",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.codeActionsOnSave": {
          "source.fixAll.eslint": "explicit"
        },
        "python.analysis.typeCheckingMode": "standard",
        "terminal.integrated.defaultProfile.linux": "zsh",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "bash",
            "icon": "terminal-bash"
          },
          "zsh": {
            "path": "zsh"
          }
        }
      }
    }
  },
  "remoteUser": "dev",
  "mounts": [
    "source=claude-code-bashhistory-${devcontainerId},target=/commandhistory,type=volume",
    "source=dev-config-${devcontainerId},target=/home/dev,type=volume",           
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind" 
  ],
  "containerEnv": {
    "POWERLEVEL9K_DISABLE_GITSTATUS": "true"
  },
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=delegated",
  "workspaceFolder": "/workspace"  
}
